<Window x:Class="PhotoSync.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoSync.Windows"
        mc:Ignorable="d"
        Title="PhotoSync" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewCommand}" CommandParameter="{Binding}" />
                <MenuItem Header="_Open" Command="{Binding OpenCommand}" CommandParameter="{Binding}" />
                <Separator />
                <MenuItem Header="_Close" />
                <Separator />
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="Fil_ter">
                <MenuItem Header="Show _New" IsCheckable="True" />
                <MenuItem Header="Show _Orphaned" IsCheckable="True" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding SelectedLibrary}" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <TextBlock Text="{Binding SelectedPhoto}" />
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TreeView Grid.Column="0">
                <TreeViewItem Header="Employee1">
                    <TreeViewItem Header="Jesper"/>
                    <TreeViewItem Header="Aaberg"/>
                    <TreeViewItem Header="12345"/>
                </TreeViewItem>
                <TreeViewItem Header="Employee2">
                    <TreeViewItem Header="Dominik"/>
                    <TreeViewItem Header="Paiha"/>
                    <TreeViewItem Header="98765"/>
                    <TreeViewItem Header="Employee1">
                        <TreeViewItem Header="Jesper"/>
                        <TreeViewItem Header="Aaberg"/>
                        <TreeViewItem Header="12345"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Employee2">
                        <TreeViewItem Header="Dominik"/>
                        <TreeViewItem Header="Paiha"/>
                        <TreeViewItem Header="98765"/>
                        <TreeViewItem Header="Employee1">
                            <TreeViewItem Header="Jesper"/>
                            <TreeViewItem Header="Aaberg"/>
                            <TreeViewItem Header="12345"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Employee2">
                            <TreeViewItem Header="Dominik"/>
                            <TreeViewItem Header="Paiha"/>
                            <TreeViewItem Header="98765"/>
                            <TreeViewItem Header="Employee1">
                                <TreeViewItem Header="Jesper"/>
                                <TreeViewItem Header="Aaberg"/>
                                <TreeViewItem Header="12345"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Employee2">
                                <TreeViewItem Header="Dominik"/>
                                <TreeViewItem Header="Paiha"/>
                                <TreeViewItem Header="98765"/>
                                <TreeViewItem Header="Employee1">
                                    <TreeViewItem Header="Jesper"/>
                                    <TreeViewItem Header="Aaberg"/>
                                    <TreeViewItem Header="12345"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Employee2">
                                    <TreeViewItem Header="Dominik"/>
                                    <TreeViewItem Header="Paiha"/>
                                    <TreeViewItem Header="98765"/>
                                    <TreeViewItem Header="Employee1">
                                        <TreeViewItem Header="Jesper"/>
                                        <TreeViewItem Header="Aaberg"/>
                                        <TreeViewItem Header="12345"/>
                                    </TreeViewItem>
                                    <TreeViewItem Header="Employee2">
                                        <TreeViewItem Header="Dominik"/>
                                        <TreeViewItem Header="Paiha"/>
                                        <TreeViewItem Header="98765"/>
                                    </TreeViewItem>
                                </TreeViewItem>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeViewItem>
            </TreeView>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"  />
            <DockPanel Grid.Column="2">
                <ToolBarTray DockPanel.Dock="Top">
                    <ToolBar>
                        <Button Content="Delete Local" />
                        <Separator />
                        <Label>Action:</Label>
                        <ComboBox SelectedValue="{Binding SelectedPhotoAction, Mode=TwoWay}"
                                  ItemsSource="{Binding PhotoActionOptions, Mode=OneTime}"
                                  SelectedValuePath="Key"
                                  DisplayMemberPath="Value" />
                    </ToolBar>
                </ToolBarTray>

                <Image />
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
